<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Please provide valid ticket for check-out</h1>
      <hr class='my-4'>
      <%= form_for :anything, url: "update", method: :put, html: { class: 'form-inline' } do |form| %>
        <div class="form-group mx-sm-3 col-md-5">
          <%= form.text_field :ticket, class: 'form-control w-100 p-3', name: :ticket %>
        </div>
        <%= form.submit 'Search', class: 'btn btn-primary'  %>
      <% end  %>
  </div>
</div>
