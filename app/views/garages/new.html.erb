<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Create new garage: </h1>
      <hr class='my-4'>
      <%= form_for @garage do |f| %>
        <div class="form-group">
          <label for="name">Garage name: </label>
          <%= f.text_field :name %>
        </div>
        <%= f.fields_for :floors do |form| %>
          <%= render 'floors/fields', form: form %>
        <% end%>
        <%= f.submit "Create", class: 'btn btn-primary' %>
      <% end %>
  </div>
</div>
